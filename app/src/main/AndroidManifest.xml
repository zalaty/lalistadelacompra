<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zalaty.lalistadelacompra">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shoppingtrolleyblack_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_shoppingtrolleyblack_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MarketActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".ProductActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".MarketUpdateDeleteActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity android:name="MarketAddActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity android:name="ProductAddActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity android:name=".ProductUpdateDeleteActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <activity android:name="ListAddActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>


</application>

</manifest>